<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApdateFilmUser.Views.MediaPage"
             Title="MediaPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#02396C" Offset="0.0" />
            <GradientStop Color="#046FD2" Offset="1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <!-- Изображение фильма (заменено на WebView) -->
            <WebView Source="{Binding ContentURL}"
             HeightRequest="300" />

            <!-- Заголовок (без Frame) -->
            <VerticalStackLayout Padding="10">
                <Label Text="{Binding Name}"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White" />
                <Label Text="{Binding Release, StringFormat='{0:yyyy}'}"
               FontSize="18"
               TextColor="White" />
            </VerticalStackLayout>

            <!-- Описание (без Frame) -->
            <Label Text="{Binding Description}"
           FontSize="14"
           TextColor="White"
           Padding="10" />

            <!-- Дополнительная информация (без Frame) -->
            <VerticalStackLayout Padding="10">
                <Grid ColumnDefinitions="auto, *">
                    <Label Text="Жанр: "
                           FontSize="16"
                           TextColor="White" />
                    <CollectionView ItemsSource="{Binding Genres}"
                                    HorizontalScrollBarVisibility="Always"
                                    Grid.Column="1"
                ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="3"
                   Background="#003587"
                   BorderColor="Transparent">
                                    <Label Text="{Binding Name}"
                       TextColor="White"/>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>

                <Label Text="Год производства: 2021"
               FontSize="16"
               TextColor="White" />
                <Label Text="Страна: Ирландия"
               FontSize="16"
               TextColor="White" />
            </VerticalStackLayout>

            <!-- Кнопка воспроизведения -->
            <Button Text="Назад"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="10"
                    Margin="20,10" 
                    Clicked="Button_Clicked"/>

            <!-- Нижние элементы -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <StackLayout>
                    <Image Source="checkfavorites.png"/>
                    <Label Text="В избранном"
                           Opacity="0.7"/>
                </StackLayout>
                <StackLayout>
                    <Label Text="18+"
                           Opacity="1"
                           FontSize="30"/>
                </StackLayout>
                <StackLayout>
                    <Image Source="actorsicon.png"/>
                    <Label Text="Актерский состав"
                           Opacity="0.7"/>
                </StackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>